{
  "models_dir": "models",
  "data_dir": "data",
  "backup_dir": "backups",
  "symbols": ["BTC-USD", "ETH-USD", "AAPL"],
  "sequence_length": 60,
  "features": ["close", "volume", "high", "low"],
  "validation_threshold": 0.15,
  "minimum_accuracy": 45.0,
  "retrain_frequency_hours": 24,
  "data_freshness_hours": 6,
  "backup_retention_days": 30,
  "training_config": {
    "epochs": 50,
    "batch_size": 32,
    "validation_split": 0.2,
    "early_stopping_patience": 10,
    "learning_rate_reduction": {
      "factor": 0.5,
      "patience": 5
    }
  },
  "model_architecture": {
    "lstm_layers": [
      {"units": 100, "return_sequences": true, "dropout": 0.2},
      {"units": 100, "return_sequences": true, "dropout": 0.2},
      {"units": 50, "return_sequences": false, "dropout": 0.2}
    ],
    "dense_layers": [25, 1]
  }
}